{% extends "SnowcapAdminBundle::base.html.twig" %}

{% trans_default_domain 'SnowcapAdminBundle' %}

{# body block #}
{% block body %}

    {# pageheader block #}
    {% block pageheader %}
        <div class="page-header">
            <h1>{{ admin.entityName(entity) }}</h1>
        </div>
    {% endblock pageheader %}

    {# detail block #}
    {% block detail %}

    {% endblock detail %}

    {% block actions %}
        <div class="btn-toolbar">
            <a href="{{ admin_content_path(admin, 'update', {'id': entity.id}) }}" class="btn">
                <i class="icon-pencil"></i> {{ "content.actions.edit"|trans }}
            </a>
            <a href="{{ admin_content_path(admin, 'delete', {'id': entity.id}) }}" class="btn btn-danger">
                <i class="icon-trash"></i> {{ "content.actions.delete.label"|trans }}
            </a>
        </div>
    {% endblock actions %}

    {# after block #}
    {% block after %}

    {% endblock %}

{% endblock body %}